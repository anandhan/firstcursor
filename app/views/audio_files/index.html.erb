<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Audio File Parser</h1>

  <% if flash[:error] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:error] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Simple Directory Input Form -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Parse Directory</h2>
    <%= form_tag parse_audio_files_path, method: :post, class: "space-y-4" do %>
      <div>
        <label class="block text-gray-700 mb-2">Directory Path:</label>
        <%= text_field_tag :directory_path, nil, class: "w-full p-2 border rounded", placeholder: "e.g., /path/to/music" %>
      </div>
      <%= submit_tag "Parse Directory", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    <% end %>
  </div>

  <!-- Results Section -->
  <% if @audio_files&.any? %>
    <div class="mt-8">
      <h2 class="text-2xl font-semibold mb-4">Found Audio Files</h2>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Size</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metadata</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @audio_files.each_with_index do |file, index| %>
                <tr>
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <% if file[:metadata][:cover_art].present? %>
                        <div class="mr-4">
                          <button onclick="showModal('modal-<%= index %>')" class="focus:outline-none">
                            <img src="data:<%= file[:metadata][:cover_art_mime_type] %>;base64,<%= file[:metadata][:cover_art] %>" 
                                 alt="Cover art" 
                                 class="h-16 w-16 rounded-lg object-cover shadow-md hover:shadow-lg transition-shadow"
                                 onerror="console.error('Failed to load cover art for <%= File.basename(file[:path]) %>')">
                          </button>
                          <!-- Debug information -->
                          <div class="text-xs text-gray-500 mt-1">
                            Cover art present: <%= file[:metadata][:cover_art].present? %>
                            MIME type: <%= file[:metadata][:cover_art_mime_type] %>
                          </div>
                          <!-- Modal -->
                          <div id="modal-<%= index %>" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
                            <div class="bg-white p-4 rounded-lg max-w-4xl max-h-[90vh] overflow-auto">
                              <img src="data:<%= file[:metadata][:cover_art_mime_type] %>;base64,<%= file[:metadata][:cover_art] %>" 
                                   alt="Cover art" 
                                   class="max-w-full h-auto rounded-lg">
                              <button onclick="hideModal('modal-<%= index %>')" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                                Close
                              </button>
                            </div>
                          </div>
                        </div>
                      <% else %>
                        <div class="mr-4 w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                          <span class="text-xs text-gray-500">No cover</span>
                        </div>
                      <% end %>
                      <div class="text-sm text-gray-900"><%= File.basename(file[:path]) %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= file[:size] %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= file[:type] %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= file[:duration] %></td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <% if file[:metadata].any? { |_, v| !v.nil? && !v.empty? } %>
                      <ul>
                        <% file[:metadata].each do |key, value| %>
                          <% if value.present? && key != :cover_art && key != :cover_art_mime_type %>
                            <li><strong><%= key.capitalize %>:</strong> <%= value %></li>
                          <% end %>
                        <% end %>
                      </ul>
                    <% else %>
                      No metadata
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
function showModal(modalId) {
  document.getElementById(modalId).classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function hideModal(modalId) {
  document.getElementById(modalId).classList.add('hidden');
  document.body.style.overflow = 'auto';
}

// Close modal when clicking outside
document.addEventListener('click', function(event) {
  if (event.target.classList.contains('bg-black')) {
    hideModal(event.target.id);
  }
});
</script>
